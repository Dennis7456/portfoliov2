{
  "settings": {
    "react": {
      "version": "18.2.0"
    }
  },
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "parser": "",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "security"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:security/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "ignorePatterns": ["temp.js", "**/vendor/*.js", "lint-staged.config.js"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-undef": "off",
    "no-unused-vars": "off"
  }
}
